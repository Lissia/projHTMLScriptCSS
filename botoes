<!DOCTYPE html>
<html>
    
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>GETTING STARTED WITH BRACKETS</title>
        <meta name="description" content="An interactive getting started guide for Brackets.">
        <link rel="stylesheet" href="main.css">
    </head>
    <body>
                
            <!--botão Enviar-->
            <input type="submit" class="btn btn-primary" id="btn_cadastro" onclick="cadastro();" />

            
                
            <!--botão Alterar-->    
            <button onclick="funcao1()">Alterar</button>
                
            <!--botão Excluir-->
            <button onclick="funcao2()">Excluir</button>
             
                
            <!--SCRIPTS-->
            <!--SCRIPTS BOTAO ENVIAR-->    
            <script> function cadastro() { alert("Cadastrado com sucesso!"); }</script>

            <!--SCRIPTS BOTAO ALTERAR--> 
 
            <p id="demo"></p>
 
            <script>
            function funcao1()
            {
                var x;
                var r=confirm("TEM CERTEZA QUE DESEJA ALTERAR?");
                if (r==true)
                {
                    x ="Cadastro Alterado!";
            }
                else
            {
            x ="Cadastro não Alterado";
            }
                document.getElementById("demo").innerHTML=x;
            }
            </script>
                
    
            <!--SCRIPTS BOTAO EXCLUIRF--> 
            <p id="demo"></p>
 
            <script>
            function funcao2()
            {
                var x;
                var r=confirm("TEM CERTEZA QUE DESEJA EXCLUIR?");
                if (r==true)
                {
                    x ="Cadastro Excluído!";
            }
                else
            {
            x ="Cadastro não excluído";
            }
                document.getElementById("demo").innerHTML=x;
            }
            </script>
                
            
                
                
      
 
            
            
           
       
            
            
            
            
            
            
            
        
      
